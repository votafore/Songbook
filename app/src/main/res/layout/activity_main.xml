<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <Button
        android:id="@+id/find_songs"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="@string/text_find_songs" />

    <Button
        android:id="@+id/view_songs"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/find_songs"
        android:layout_below="@+id/find_songs"
        android:layout_marginTop="55dp"
        android:text="@string/test_view_songs" />

    <Button
        android:id="@+id/add_song"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_below="@+id/view_songs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="Button"
        tools:text="@string/text_add_song" />

</RelativeLayout>
